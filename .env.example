# OnchainKit Configuration
NEXT_PUBLIC_ONCHAINKIT_API_KEY=your_onchainkit_api_key_here

# Network Configuration
# Set to 'true' to force mainnet usage even in development
NEXT_PUBLIC_FORCE_MAINNET=false

# Base Network RPC URLs (optional - OnchainKit provides defaults)
NEXT_PUBLIC_BASE_RPC_URL=https://mainnet.base.org
NEXT_PUBLIC_BASE_SEPOLIA_RPC_URL=https://sepolia.base.org

# Contract Addresses (update when contracts are deployed)
NEXT_PUBLIC_SHMOO_CONTRACT_BASE=0x0000000000000000000000000000000000000000
NEXT_PUBLIC_SHMOO_CONTRACT_BASE_SEPOLIA=0x0000000000000000000000000000000000000000

# Analytics and Monitoring (optional)
NEXT_PUBLIC_ANALYTICS_ID=
NEXT_PUBLIC_SENTRY_DSN=

# App Configuration
NEXT_PUBLIC_APP_NAME=Shmoo Clicker
NEXT_PUBLIC_APP_DESCRIPTION=Click your way to verifiable digital points
NEXT_PUBLIC_APP_URL=https://your-app-domain.com

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_SOUND_EFFECTS=true
NEXT_PUBLIC_ENABLE_HAPTIC_FEEDBACK=true
